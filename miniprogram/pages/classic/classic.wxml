<!-- miniprogram/pages/classic/classic.wxml -->
<view class="container">
    <view class="header">
        <v-episode index="{{classic.index}}"></v-episode>
        <v-like bind:like="onLike" like="{{likeStatus}}" count="{{likeCount}}"></v-like>
    </view>
    <v-movie img="{{classic.image}}" content="{{classic.content}}"></v-movie>
    <v-navi bind:left="onNext" bind:right="onPrevious" class="navi" title="{{classic.title}}" first="{{first}}" latest="{{latest}}"></v-navi>
</view>