<view class="container">
    <image src="/images/my/my@bg.png" class="bg"></image>
    <v-button wx:if="{{!loading}}" open-type="getUserInfo" class="avatar-position" bind:getuserinfo="onGetUserInfo">
        <image slot="img" class="avatar" src="/images/my/my.png" />
    </v-button>
    <!-- <v-button wx:if="{{!authorized}}" open-type="getUserInfo" class="avatar-position" bind:getuserinfo="onGetUserInfo">
        <image slot="img" class="avatar" src="/images/my/my.png" />
    </v-button> -->
    <!-- 登录 难点 服务器 微信支付 -->
    <view wx:else class="avatar-container avatar-position">
        <image src="{{userInfo.avatarUrl}}" class="avatar" />
        <text>{{userInfo.nickName}}</text>
    </view>
    <view class="about-container">
        <view class="about-us">
            <image src="/images/my/about.png" />
            <text class="description">关于我</text>
        </view>
        <view class="about-us">
            <text class="book-num">{{loading?bookCount:0}}</text>
            <text class="description">喜欢的书</text>
        </view>
    </view>
    <!-- <button open-type="getUserInfo" bindgetuserinfo="getUserInfo">授权</button> -->
    <view class="like-container">
        <image class="headline" src="/images/my/like.png" />
        <view class="preview-container" wx:if="{{loading}}">
            <block wx:for="{{classics}}" wx:key="">
                <v-preview bind:tapping="onJumpToDetail" class="preview" classic="{{item}}" />
            </block>
        </view>
    </view>
</view>